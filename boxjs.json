  "apps": [
    {
      "id": "fuba_sign",
      "name": "福利吧签到",
      "author": "@ader90520",
      "repo": "https://github.com/ader90520/QuantumultX",
      "icons": [
        "https://raw.githubusercontent.com/leiyiyan/resource/main/icons/pyy.png",
        "https://raw.githubusercontent.com/leiyiyan/resource/main/icons/pyy.png"
      ],
      "keys": [
        "fuba_cookie",
        "fuba_username",
        "fuba_domain"
      ],
      "settings": [
        {
          "id": "fuba_domain",
          "name": "福利吧域名",
          "val": "www.wnflb2023.com",
          "type": "select",
          "options": [
            {
              "name": "wnflb2023.com",
              "val": "www.wnflb2023.com"
            },
            {
              "name": "wnflb00.com",
              "val": "www.wnflb00.com"
            },
            {
